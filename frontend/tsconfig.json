{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve", // Correct for Next.js projects.
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "dom", // Required for DOM elements like window, document, etc.
      "dom.iterable", // Enables iterables in the DOM.
      "esnext" // Support latest ECMAScript features.
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}