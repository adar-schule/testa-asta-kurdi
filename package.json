{
    "name": "testa-asta-kurdi",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "npm run dev:frontend & npm run dev:backend",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run start:dev",
        "start": "npm run build:frontend && npm run build:backend && npm run serve",
        "serve": "concurrently \"npm run serve:frontend\" \"npm run serve:backend\"",
        "serve:frontend": "cd frontend && npm run start",
        "serve:backend": "cd backend && npm run start",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build"
    },
    "optionalDependencies": {
        "@next/swc-darwin-arm64": "14.2.15",
        "@next/swc-linux-x64": "14.2.15"
    },
    "workspaces": [
        "frontend",
        "backend"
    ],
    "dependencies": {
        "@nestjs/config": "^3.2.3",
        "concurrently": "^6.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.6.2"
    }
}