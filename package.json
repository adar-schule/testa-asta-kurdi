{
    "name": "testa-asta-kurdi",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "install": "node ./install-swc.js",
        "dev": "npm run dev:frontend & npm run dev:backend",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run start:dev",
        "start": "npm run build:frontend && npm run build:backend && npm run serve",
        "serve": "concurrently \"npm run serve:frontend\" \"npm run serve:backend\"",
        "serve:frontend": "cd frontend && npm run start",
        "serve:backend": "cd backend && npm run start",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build"
    },
    "workspaces": [
        "frontend",
        "backend"
    ],
    "engines": {
        "node": "20.x"
    },
    "dependencies": {
        "@nestjs/config": "^3.2.3",
        "concurrently": "^6.0.0"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "prettier": "^3.0.0",
        "typescript": "^5.6.2"
    }
}